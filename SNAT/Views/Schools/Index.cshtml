@model IEnumerable<SNAT.Models.mSchool>

@{
    ViewBag.Title = "School List";
    Layout = "~/Views/Shared/_LayoutMainMDI.cshtml";
}


<div class="row mt-5">
    <div class="col-12">
        <div class="card">
            <div class="card-header">
                <h4>@ViewBag.Title</h4>
            </div>
            <div class="card-body">
                <div class="table-responsive">
                    <table id="tblMemberList" class="table table-striped table-hover" cellspacing="0">
                        <thead style="text-align:center" class="table-success">
                            <tr>
                                <th>@Html.DisplayNameFor(model => model.code)</th>
                                <th>@Html.DisplayNameFor(model => model.name)</th>
                                <th>@Html.DisplayNameFor(model => model.status)</th>

                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>

                                    <td>@Html.DisplayFor(modelItem => item.code)</td>
                                    <td>@Html.DisplayFor(modelItem => item.name)</td>
                                    <td style="text-align:center">@Html.DisplayFor(modelItem => item.status)</td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>
<script>
    $(document).ready(function () {
        $('#tblMemberList').DataTable();
    });
</script>

