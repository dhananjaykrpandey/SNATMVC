@model SNAT.Models.mLogin

@{
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <title>SNAT | Log in</title>
    <link rel="stylesheet" href="../dist/modules/bootstrap/css/bootstrap.min.css">
    <link rel="stylesheet" href="../dist/modules/ionicons/css/ionicons.min.css">
    <link rel="stylesheet" href="../dist/modules/fontawesome/web-fonts-with-css/css/fontawesome-all.min.css">

    <link rel="stylesheet" href="../dist/css/demo.css">
    <link rel="stylesheet" href="../dist/css/style.css">
    <link rel="icon" type="image/png" href="~/SNAT.png" />
</head>
<body class="bg-transparent">
    @using (Html.BeginForm())
    {

        @Html.AntiForgeryToken();


        <div id="app">
            <section class="section">

                <div class="container mt-5">
                    <div class="row">
                        <div class="col-12 col-sm-8 offset-sm-2 col-md-6 offset-md-3 col-lg-6 offset-lg-3 col-xl-4 offset-xl-4">
                            <div class="login-brand">
                                <a href="@Url.Action("Index","Home")" class="text-danger" style="text-decoration:none">
                                    
                                    <img alt="image" src="../img/SNAT.png" width="80" class="rounded-circle mr-1"> <br />
                                    SNAT
                                </a>
                            </div>
                            
                            <div class="card card-primary">
                                <div class="card-header"><h4>Login</h4></div>

                                <div class="card-body">
                                    <form method="POST" action="#" class="needs-validation" novalidate="">
                                        @Html.ValidationMessage("authenticationError", new { @class = "text-danger" })
                                        <div class="form-group">
                                            <label for="username">Login ID</label>
                                            <div class="input-group mb-2">
                                                <div class="input-group-prepend">
                                                    <div class="input-group-text"><i class="fa fa-user fa-md text-info"></i></div>
                                                </div>
                                                <input id="username" type="text" class="form-control" name="username" tabindex="1" required autofocus>
                                                <div class="invalid-feedback">
                                                    @Html.ValidationMessageFor(ml => ml.username, "", new { @class = "text-danger" })
                                                </div>
                                            </div>
                                        </div>

                                        <div class="form-group">
                                            <label for="password" class="d-block">
                                                Password
                                                <div class="float-right">
                                                    <a href="forgot.html">
                                                        Forgot Password?
                                                    </a>
                                                </div>
                                            </label>
                                            <div class="input-group mb-2">
                                                <div class="input-group-prepend">
                                                    <div class="input-group-text"><i class="fa fa-key fa-md text-info"></i></div>
                                                </div>
                                                <input id="password" type="password" class="form-control" name="password" tabindex="2" required>
                                                <div class="invalid-feedback">
                                                    @Html.ValidationMessageFor(m => m.password, "", new { @class = "text-danger" })
                                                </div>
                                            </div>
                                        </div>

                                        <div class="form-group">
                                            <div class="custom-control custom-checkbox">
                                                <input type="checkbox" name="remember" class="custom-control-input" tabindex="3" id="remember-me">
                                                <label class="custom-control-label" for="remember-me">Remember Me</label>
                                            </div>
                                        </div>

                                        <div class="form-group">
                                            <button type="submit" class="btn btn-primary btn-block" tabindex="4">
                                                <i class="fa fa-sign-in-alt"></i> Login
                                            </button>
                                        </div>
                                        <div class="form-group">
                                            <a href="@Url.Action("Index","Home")"  class="btn btn-primary btn-block bg-danger" tabindex="5">
                                               <i class="fa fa-home"></i> Home
                                            </a>
                                        </div>
                                    </form>
                                </div>
                            </div>

                            <div class="simple-footer">
                                Copyright &copy; @DateTime.Now.Year -  <div class="bullet"></div> <a href="https://www.arnikainfotech.com" target="_blank">Arnika Technologies <br /> (3S ESWATINI IT SERVICES (PTY) LTD)</a>
                            </div>
                        </div>
                    </div>
                </div>
            </section>
        </div>


    }
    <!-- /.login-box -->
    <script src="../dist/modules/jquery.min.js"></script>
    <script src="../dist/modules/popper.js"></script>
    <script src="../dist/modules/tooltip.js"></script>
    <script src="../dist/modules/bootstrap/js/bootstrap.min.js"></script>
    <script src="../dist/modules/nicescroll/jquery.nicescroll.min.js"></script>
    <script src="~/Scripts/moment.min.js"></script>
    <script src="../dist/modules/scroll-up-bar/dist/scroll-up-bar.min.js"></script>
    <script src="../dist/js/sa-functions.js"></script>

    <script src="../dist/js/scripts.js"></script>
    <script src="../dist/js/custom.js"></script>
    <script src="../dist/js/demo.js"></script>
</body>
</html>
